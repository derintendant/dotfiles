#!/bin/zsh

TITLE=$(cat ~/Library/Application\ Support/Google\ Play\ Music\ Desktop\ Player/json_store/playback.json | /Users/dstengele/homebrew/bin/jq -r ".song.title")
ARTIST=$(cat ~/Library/Application\ Support/Google\ Play\ Music\ Desktop\ Player/json_store/playback.json | /Users/dstengele/homebrew/bin/jq -r ".song.artist")
NP=$(cat ~/Library/Application\ Support/Google\ Play\ Music\ Desktop\ Player/json_store/playback.json | /Users/dstengele/homebrew/bin/jq -r ".playing")

if [ "$NP" = "true" ]; then
    echo "$ARTIST - $TITLE"
else
    echo "---"
fi
