#!/bin/zsh

while true; do
	RESULT=$(curl -s "http://status.derintendant.de/ping")
	if [[ $RESULT != "pong" ]]; then
		echo "PHP-FPM is down";
		/Users/derintendant/Development/terminal-notifier/build/Release/terminal-notifier.app/Contents/MacOS/terminal-notifier -message "PHP-FPM is down"
		echo $RESULT;
	else
		echo "Still up";
	fi
	sleep 10
done
